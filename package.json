{
  "name": "@eighty4/c2",
  "version": "0.0.5-0",
  "author": "Adam McKee <adam.be.g84d@gmail.com>",
  "repository": "https://github.com/eighty4/c2",
  "homepage": "https://github.com/eighty4/c2",
  "keywords": [
    "devops",
    "cloud-init",
    "cloud config",
    "user data",
    "linux",
    "cloud"
  ],
  "description": "Cross platform cloud config tooling for cloud-init",
  "license": "BSD-2-Clause",
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "bun": ">=1.2",
    "node": ">=23"
  },
  "bin": {
    "c2": "./lib_js/bin.js"
  },
  "exports": {
    ".": {
      "bun": "./lib/api.ts",
      "node": "./lib_js/api.js",
      "types": "./lib_types/api.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write .",
    "fmtcheck": "prettier --check .",
    "test": "node --test \"lib/**/*.spec.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "prettier": "^3.8.1",
    "typescript": "5.9.3"
  },
  "files": [
    "lib/*",
    "!lib/*.spec.ts",
    "lib_js/*",
    "lib_types/*",
    "CHANGELOG.md"
  ]
}
