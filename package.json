{
  "name": "@eighty4/c2",
  "version": "0.0.2-26",
  "author": "Adam McKee <adam.be.g84d@gmail.com>",
  "repository": "https://github.com/eighty4/c2",
  "homepage": "https://github.com/eighty4/c2",
  "keywords": [
    "devops",
    "cloud-init",
    "cloud config",
    "user data",
    "linux",
    "cloud"
  ],
  "description": "Cross platform cloud config tooling for cloud-init",
  "license": "BSD-2-Clause",
  "type": "module",
  "engines": {
    "bun": ">=1.2",
    "node": ">=23"
  },
  "bin": {
    "c2": "./lib_js/c2.bin.js"
  },
  "exports": {
    ".": {
      "bun": "./lib_js/c2.api.js",
      "node": "./lib/c2.api.ts"
    }
  },
  "imports": {
    "#c2/*": {
      "bun": "./lib/*.ts",
      "node": "./lib_js/*.js"
    }
  },
  "types": "./lib_types",
  "scripts": {
    "build": "tsc && chmod +x lib_js/c2.bin.js",
    "fmt": "prettier --write .",
    "fmtcheck": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "magic-string": "0.30.17"
  },
  "devDependencies": {
    "@types/bun": "1.2.5",
    "@types/node": "^22.14.1",
    "prettier": "^3.5.3",
    "typescript": "5.8.2"
  },
  "files": [
    "lib/*",
    "lib_js/*",
    "lib_types/*",
    "CHANGELOG.md"
  ]
}
